<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmSample3.Views.HomePage"
             xmlns:views="clr-namespace:MvvmSample3.Views"
             BackgroundColor="LightGray"
             >

    <ContentPage.Content>
        
        <Grid RowDefinitions="*,*,*" 
              ColumnDefinitions="*,*" 
              VerticalOptions="Center" 
              Padding="20"
              ColumnSpacing="20"
              RowSpacing="20">
            
            <views:MenuView Grid.Column="0" Grid.Row="0" BindingContext="{Binding Option1}"/>
            <views:MenuView Grid.Column="1" Grid.Row="0" BindingContext="{Binding Option2}"/>
            <views:MenuView Grid.Column="0" Grid.Row="1" BindingContext="{Binding Option3}"/>
            <views:MenuView Grid.Column="1" Grid.Row="1" BindingContext="{Binding Option4}"/>
            <views:MenuView Grid.Column="0" Grid.Row="2" BindingContext="{Binding Option5}"/>
            <views:MenuView Grid.Column="1" Grid.Row="2" BindingContext="{Binding Option6}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>